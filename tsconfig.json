{
	"extends": [
		"@vue/tsconfig/tsconfig.dom.json",
		"@vue/tsconfig/tsconfig.lib.json"
	],
	"exclude": [
		"vue2"
	],
	"compilerOptions": {
		"noImplicitAny": false,
		"importHelpers": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"noEmit": true,
		"isolatedModules": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
